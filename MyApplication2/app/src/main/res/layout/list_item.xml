<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:layout_marginStart="10sp"
    android:layout_marginEnd="10sp"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white"
    android:id="@+id/mainLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/image_itemList"
            android:layout_width="120sp"
            android:layout_height="120sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/listName"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Car"
            android:textStyle="bold"
            android:textSize="21sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            app:layout_constraintLeft_toRightOf="@id/image_itemList"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/listModel"
            android:text="a76a67"
            android:background="@drawable/roundcorner"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="10sp"
            app:layout_constraintLeft_toRightOf="@id/image_itemList"
            app:layout_constraintTop_toBottomOf="@id/listName"/>

        <TextView
            android:id="@+id/listGaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80%"
            android:layout_marginStart="10sp"
            android:layout_marginBottom="10sp"
            android:layout_toEndOf="@id/listName"
            app:layout_constraintLeft_toRightOf="@id/image_itemList"
            app:layout_constraintTop_toBottomOf="@id/listModel"/>

        <TextView
            android:id="@+id/listPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from 2,55 rub"
            android:layout_marginStart="10sp"
            android:layout_toEndOf="@id/listName"
            app:layout_constraintLeft_toRightOf="@id/image_itemList"
            app:layout_constraintTop_toBottomOf="@id/listGaz"/>

        <TextView
            android:id="@+id/listStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dont use"
            android:layout_marginEnd="20sp"
            android:layout_toEndOf="@id/listName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>